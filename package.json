{
  "name": "punsook-innotech",
  "version": "1.0.0",
  "description": "ระบบบริหารจัดการรับซื้อยาง (Rubber Purchasing Management System)",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"cross-env SKIP_ENV_VALIDATION=true next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start",
    "electron": "electron .",
    "prepare:build": "node scripts/prepare-build-db.js",
    "electron:build": "npm run prepare:build && next build && npx prisma generate && electron-builder",
    "electron:build:win": "npm run prepare:build && next build && npx prisma generate && electron-builder --win",
    "electron:build:mac": "npm run prepare:build && next build && npx prisma generate && electron-builder --mac",
    "electron:build:all": "npm run prepare:build && next build && npx prisma generate && electron-builder --win --mac",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "postinstall": "prisma generate",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "next": "^13.5.6",
    "node-cron": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.31",
    "prisma": "^5.6.0",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.punsook.innotech",
    "productName": "Punsook Innotech",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "prisma/**/*",
      "node_modules/.prisma/**",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma/dev.db",
        "to": "prisma/dev.db",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/@prisma/engines",
        "to": "node_modules/@prisma/engines",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "electron/icon.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "electron/icon.png",
      "category": "Office"
    }
  }
}
